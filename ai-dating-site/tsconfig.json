{
  "compilerOptions": {
    "target": "ESNext", // Better for modern React features
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false, // Enforce TypeScript usage
    "skipLibCheck": true, // Avoid type check spam from node_modules
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx" // âœ… React 17+ JSX transform (React 18 compatible)
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
